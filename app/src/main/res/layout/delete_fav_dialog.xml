<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/material_dialog_bg"
    android:padding="20dp">


    <TextView
        android:id="@+id/heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="13dp"
        android:text="UnFavourite Item"
        android:textColor="#2d2d2d"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/about_dialog_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading_tv"
        android:textColor="#2d2d2d"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Are you sure, you want to remove this item from favourites list"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_dialog_answer_tv"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true">


        <TextView
            android:id="@+id/confirm_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="right"
            android:textSize="22sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/confirm_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:gravity="right"
            android:layout_toLeftOf="@+id/confirm_tv_cancel"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />



    </RelativeLayout>





</RelativeLayout>
