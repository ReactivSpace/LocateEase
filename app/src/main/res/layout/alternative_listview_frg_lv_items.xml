<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">



    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alternative_routes_listview_items_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="33sp"
            android:text="12min"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/alternative_routes_listview_items_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4d4d4d"
            android:textSize="27sp"
            android:text="3,9 km"
            android:gravity="right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/alternative_routes_listview_items_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Via: Route"
        android:textColor="#4d4d4d"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:layout_below="@+id/top_container"
        />

    <Button
        android:id="@+id/alternative_routes_follow_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_bg"
        android:text="Follow"
        android:textSize="18sp"
        android:layout_below="@+id/alternative_routes_listview_items_via"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="#FFF"
        android:textAllCaps="false"

        />



</RelativeLayout>