<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="#FFF"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    >


    <ImageView
        android:id="@+id/detail_distance_img"
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:src="@drawable/airport_marker"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/detail_distance_img"
        >

        <TextView
            android:id="@+id/detail_distance_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="left"
            android:textSize="25sp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />


        <TextView
            android:id="@+id/detail_distance_address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:gravity="left"
            android:textSize="14sp"
            android:text="Detail Address"
            android:textStyle="normal"
            android:layout_below="@+id/detail_distance_name_txt"
            android:layout_marginTop="2dp"
            android:textColor="#000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_distance_address_txt"
            android:gravity="left">


            <TextView
                android:id="@+id/distance_in_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="65"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/km_simple_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:text=" Km"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/distance_in_km"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>





    </RelativeLayout>






</RelativeLayout>