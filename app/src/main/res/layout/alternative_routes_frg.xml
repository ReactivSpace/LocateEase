<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">


    <FrameLayout
        android:visibility="gone"
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <com.inotechsol.amirhafiz.locateease.ViewPagerSlidingTab.PagetSlidingTab_Strip
        android:id="@+id/view_comm_frag_tabs"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:pstsDividerColor="#FFF"
        app:pstsIndicatorColor="@color/colorPrimary"
        app:pstsTextAllCaps="false" />

    <View
        android:id="@+id/viewpager_divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/view_comm_frag_tabs"
        android:background="@drawable/bg_shadow" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewpager_divider" />


</RelativeLayout>
