<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/top_splash_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/splash_icon"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <RelativeLayout
        android:id="@+id/navigate_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_splash_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="7dp">


        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/map_icon"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:paddingLeft="30dp"
            android:layout_toRightOf="@+id/icon_iv"


            />

    </RelativeLayout>
    
    <View
        android:id="@+id/view_simple"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="7dp"
        android:layout_below="@+id/navigate_rl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />



    <ListView
        android:groupIndicator="@null"
        android:id="@+id/slidingmenu_left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="none"
        android:background="#10b799"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/view_simple"
        android:layout_marginBottom="30dp"/>




</RelativeLayout>