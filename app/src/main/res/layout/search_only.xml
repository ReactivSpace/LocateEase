<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:background="#FFF"
    android:paddingRight="15dp"
    >

    <RelativeLayout
        android:id="@+id/search_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/search_frg_speech_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mic_icon"
            android:layout_alignParentLeft="true"
            android:paddingRight="15dp"
            />



        <ImageView
            android:id="@+id/search_frg_search_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/images"
            android:layout_alignParentRight="true"
            />


        <EditText
            android:id="@+id/search_frg_search_edt"
            android:layout_toLeftOf="@+id/search_frg_search_iv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:maxLines="1"
            android:hint="Enter location"
            android:scrollHorizontally="true"
            android:inputType="text"
            android:layout_marginRight="15dp"
            android:textColorHint="#acacac"
            android:paddingLeft="5dp"
            android:background="@drawable/background_border"
            android:layout_toRightOf="@+id/search_frg_speech_iv"
            />

    </RelativeLayout>


    <ListView
        android:id="@+id/last_search_items_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1.5dp"
        android:layout_centerHorizontal="true"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/search_top_container"
        android:layout_marginTop="15dp"
        />


</RelativeLayout>


